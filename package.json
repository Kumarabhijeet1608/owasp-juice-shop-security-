{
  "name": "owasp-juice-shop-security",
  "version": "1.0.0",
  "description": "Comprehensive security hardening and vulnerability assessment of OWASP Juice Shop with AWS deployment",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:security": "npm run security:audit && npm run security:scan && npm run security:test",
    "security:audit": "npm audit --audit-level=high",
    "security:scan": "npm run security:zap && npm run security:dependency-check",
    "security:zap": "zap-baseline.py -t http://localhost:3000",
    "security:dependency-check": "dependency-check --scan . --format HTML --out reports/",
    "security:test": "jest --testPathPattern=security",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docs:build": "markdown-it docs/ -o docs/build/",
    "deploy:dev": "./deployment/deploy.sh development",
    "deploy:staging": "./deployment/deploy.sh staging",
    "deploy:prod": "./deployment/deploy.sh production",
    "validate:infra": "./deployment/validate-infrastructure.sh",
    "security:metrics": "node scripts/metrics-collection.js",
    "compliance:check": "node scripts/compliance-check.js"
  },
  "keywords": [
    "security",
    "owasp",
    "juice-shop",
    "vulnerability-assessment",
    "security-hardening",
    "aws",
    "cloud-security",
    "penetration-testing",
    "security-testing",
    "cybersecurity"
  ],
  "author": "[Your Name]",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/owasp-juice-shop-security.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/owasp-juice-shop-security/issues"
  },
  "homepage": "https://github.com/yourusername/owasp-juice-shop-security#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.10",
    "mysql2": "^3.6.5",
    "joi": "^17.11.0",
    "dompurify": "^3.0.5",
    "jsdom": "^23.0.1",
    "winston": "^3.11.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "prettier": "^3.1.1",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-toc-done-right": "^4.2.0"
  },
  "optionalDependencies": {
    "aws-sdk": "^2.1499.0",
    "serverless": "^3.38.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testPathPattern": "tests/",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
